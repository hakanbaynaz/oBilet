<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBus"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/busTicket"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/indigo_700"
            app:cornerRadius="24dp"
            app:icon="@drawable/baseline_directions_bus_14"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFlight"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/flightTicket"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            app:backgroundTint="@color/white"
            app:cornerRadius="24dp"
            app:icon="@drawable/baseline_local_airport_14"
            app:iconTint="@color/textColor" />
    </LinearLayout>

</merge>