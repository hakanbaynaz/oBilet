<resources>
    <!-- Base application theme. -->
    <style name="Theme.ObiletCaseStudy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_200</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ObiletCaseStudy.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_24</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:minHeight">?actionBarSize</item>
    </style>
</resources>